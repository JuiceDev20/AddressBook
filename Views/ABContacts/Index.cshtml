@model IEnumerable<AddressBook.Models.ABContacts>

@{
    ViewData["Title"] = "Index";
}

<h2>Contact Information</h2>

@*<p>
    <a class="btn btn-primary btn-sm" asp-action="Create">Add Contact</a>
</p>*@
<table class="table">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>
        </tr>
}
    </tbody>
</table>

<a class="btn btn-outline-primary btn-sm" asp-controller="Home" asp-action="Index">Back Home</a>